<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/about_1"
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_margin="8.0dip"
        android:foreground="?android:selectableItemBackground"
        card_view:cardCornerRadius="2.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/detailImageView"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16.0dip"
                android:src="@drawable/ic_voltage" />

            <TextView
                android:id="@+id/text_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="8.0dip"
                android:layout_toRightOf="@id/detailImageView"
                android:text="adsdfsdf"
                android:textColor="@color/white"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/text_detail_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.0dip"
                android:textColor="@color/white"
                android:textSize="20.0sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>